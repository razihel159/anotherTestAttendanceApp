<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Dashboard"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/tvAttendancePercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attendance: 85%"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnActivateGPS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activate GPS"/>

    <Button
        android:id="@+id/btnViewCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Calendar"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnSubmitAbsenceRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Absence Request"
        android:layout_marginTop="16dp"/>

</LinearLayout>

